@model IEnumerable<Prison_Managment_System_Site.Models.Prisoner>

@{
    ViewBag.Title = "Prisoners";
}

<h2>Prisoners</h2>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12 col-lg-offset-0">
            <table>
                <tr>
                    <th>
                        <input type="search" name="Search" value="" class="form-control" placeholder="Prisoner's Name'">
                    </th>
                    <th></th>
                    <th>
                        <input type="checkbox" name="filterRelation" value="on"/> Only Related Prisoners
                    </th>
                    <th>
                        <input type="submit" value="Filter" class="btn btn-default" />
                    </th>
                </tr>
            </table>
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.Label("Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.crime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) 
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.first_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.crime)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID })
        </td>
    </tr>
}

</table>
